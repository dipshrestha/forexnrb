{
  "manifest_version": 2,

  "name": "Foreign Currency Exchange Rate - NRB",
  "short_name": "Forex - NRB",
  "description": "Foreign Currency Exchange Rate - Nepal Rastra Bank.",
  "version": "1.0",

  "permissions": ["http://www.nrb.org.np//*/", "notifications"],
  "icons": {
		"128": "img/icon_large.png"
	},
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  
  "background": {
    "scripts": ["JS/app/background.js"]
  },
 
"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "content_scripts": [{
      "js": ["JS/lib/canvasjs.min.js"],
	  "matches":["*://*/*"],
	  "run_at":"document_start"
    }]
	
	
}
